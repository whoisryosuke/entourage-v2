{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "entourage",
  "version": "0.1.2",
  "identifier": "com.entourage.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Entourage",
        "width": 1920,
        "height": 1080,
        "maximizable": true,
        "theme": "Dark"
      }
    ],

    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPLOCALDATA/**",
          "$APPCACHE/**",
          "$RESOURCE/**",
          "$DOWNLOAD/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",

    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
