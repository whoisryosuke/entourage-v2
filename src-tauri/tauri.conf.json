{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "entourage-v3",
  "version": "0.1.0",
  "identifier": "com.entourage.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "entourage-v3",
        "width": 800,
        "height": 600
      }
    ],

    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPCACHE/**", "$RESOURCE/**", "$DOWNLOAD/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
